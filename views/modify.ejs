<%- include('partials/header'); -%>

<% if (err) { %>
<div class="alert alert-warning alert-dismissible" role="alert">
  <button class="close" data-dismiss="alert" aria-label="Close" type="button"><span aria-hidden="true">&times;</span></button>
  <strong>Warning!</strong> <%= err %>
</div>
<% } %>

<h1>Update Your Freight</h1>
<p>Please update your carrier and freight information below and submit</p>
<br />
<form class="" action="/modify/<%=request_id%>" method="post">

  <div class="row">
    <div class="form-group col-md-12">
      <label for="customer">Customer</label>
      <input class="form-control" id="inputCustomer" type="text" name="customer" value="<%= customer %>" required>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="inputShippingFrom">Shipping From</label>
      <input type="text" class="form-control" id="inputShippingFrom" name="shippingFrom" value="<%= shippingFrom %>" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputDeliveryTo">Delivery To</label>
      <input type="text" class="form-control" id="inputDeliveryTo" name="deliveryTo" value="<%= deliveryTo %>" required>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="inputShippingDate">Shipping Date</label>
      <input class="form-control" id="inputShippingDate" type="date" name="shippingDate" value="<%= shippingDate %>" placeholder="YYYY-MM-DD" title="YYYY-MM-DD" pattern="[1-2]{1}[0-9]{3}-[0-9]{2}-[0-9]{2}" min="1990-01-01" max="2999-12-31" required>
    </div>

    <div class="form-group col-md-6">
      <label for="inputDeliveryDate">Delivery Date</label>
      <input class="form-control" id="inputDeliveryDate" type="date" name="deliveryDate" value="<%= deliveryDate %>" placeholder="YYYY-MM-DD" title="YYYY-MM-DD" pattern="[1-2]{1}[0-9]{3}-[0-9]{2}-[0-9]{2}" min="1990-01-01" max="2999-12-31" required>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <label for="inputKg">Weight(kg)</label>
      <input class="form-control" id="inputKg" type="text" name="weightKg" pattern="[0-9]{1,5}" value="<%= weightKg %>" required>
    </div>

    <div class="form-group col-md-4">
      <label for="inputBolNo">BOL No</label>
      <input class="form-control" id="inputBolNo" type="text" name="bolNo" value="<%= bolNo %>" pattern="[A-Z]{1}[0-9]{11}" placeholder="Arrangement #" required>
    </div>

    <div class="form-group col-md-4">
      <label for="inputTruck">Truck Type</label>
      <% if (truckType === "Flatbed") { %>
      <div class="form-group">
        <div class="form-check radio-inline">
          <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="flatbed" value="Flatbed" checked required>
          <label class="form-check-label" for="inputTruck">Flatbed</label>
        </div>
        <div class="form-check radio-inline">
          <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="van" value="Van" required>
          <label class="form-check-label" for="inputTruck">Van</label>
        </div>
      </div>
      <% } else { %>
      <div class="form-group">
        <div class="form-check radio-inline">
          <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="flatbed" value="Flatbed" required>
          <label class="form-check-label" for="inputTruck">Flatbed</label>
        </div>
        <div class="form-check radio-inline">
          <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="van" value="Van" checked required>
          <label class="form-check-label" for="inputTruck">Van</label>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <label for="inputSpecialNote">Special Note</label>
      <input class="form-control" id="inputSpecialNote" type="text" name="specialNote" value="<%= specialNote %>">
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <button class="btn btn-lg btn-primary btn-block" type="submit" name="button" value="update">Update</button>
    </div>
  </div>


</form>

<%- include('partials/footer'); -%>
