<%- include("partials/header"); -%>
<%- include("partials/navbar"); -%>

<body>
  <div class="container">
    <% if (err) { %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button class="close" data-dismiss="alert" aria-label="Close" type="button"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> <%= err %>
      </div>
    <% } %>

    <div class="title">
      <h2 class="title-heading">Assign Carrier and Freight</h2>
      <p>Please enter carrier and freight information below and submit</p>
    </div>

    <form class="" action="/assign-carrier-and-freight/<%= _id %>" method="post">

      <div class="row">
        <div class="col-md-5">
          <label for="selectShipFrom">Ship From</label>
          <select id="selectShipFrom" class="form-control" name="shipFrom" required readonly>
            <option selected><%= shipFrom %></option>
          </select>
        </div>
        <div class="col-md-7">
          <label for="selectShipFromAddress">Ship From Address</label>
          <select id="selectShipFromAddress" class="form-control" name="shipFromAddress" required readonly>
            <option selected><%= shipFromAddress %></option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="col-md-5">
          <label for="selectShipTo">Ship To</label>
          <select id="selectShipTo" class="form-control" name="shipTo" required readonly>
            <option selected><%= shipTo %></option>
          </select>
        </div>
        <div class="col-md-7">
          <label for="selectShipToAddress">Ship To Address</label>
          <select id="selectShipToAddress" class="form-control" name="shipToAddress" required readonly>
            <option selected><%= shipToAddress %></option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <label for="inputKg">Weight(kg)</label>
          <input class="form-control" id="inputKg" type="text" name="weightKg" pattern="[0-9]{1,5}" value="<%= weightKg %>" required readonly>
        </div>

        <div class="col-md-4">
          <label for="inputBolNo">BOL No</label>
          <input class="form-control" id="inputBolNo" type="text" name="bolNo" value="<%= bolNo %>" pattern="[A-Z]{1}[0-9]{11}" placeholder="Arrangement #" required readonly>
        </div>

        <div class="col-md-4">
          <label for="inputTruck">Truck Type</label>
          <% if (truckType === "Flatbed") { %>
          <div class="">
            <div class="form-check radio-inline">
              <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="flatbed" value="Flatbed" checked required readonly>
              <label class="form-check-label" for="inputTruck">Flatbed</label>
            </div>
            <div class="form-check radio-inline">
              <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="van" value="Van" required readonly>
              <label class="form-check-label" for="inputTruck">Van</label>
            </div>
          </div>
          <% } else if (truckType === "Van") { %>
          <div class="">
            <div class="form-check radio-inline">
              <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="flatbed" value="Flatbed" required readonly>
              <label class="form-check-label" for="inputTruck">Flatbed</label>
            </div>
            <div class="form-check radio-inline">
              <input class="form-check-input truck-type" id="inputTruck" type="radio" name="truckOptions" id="van" value="Van" checked required readonly>
              <label class="form-check-label" for="inputTruck">Van</label>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <label for="inputShippingDate">Shipping Date</label>
          <input class="form-control" id="inputShippingDate datepicker" type="date" name="shippingDate" value="<%= shippingDate %>" placeholder="YYYY-MM-DD" title="YYYY-MM-DD" pattern="[1-2]{1}[0-9]{3}-[0-9]{2}-[0-9]{2}" min="1990-01-01" max="2999-12-31" required readonly>
        </div>

        <div class="col-md-6">
          <label for="inputDeliveryDate">Delivery Date</label>
          <input class="form-control" id="inputDeliveryDate" type="date" name="deliveryDate" value="<%= deliveryDate %>" placeholder="YYYY-MM-DD" title="YYYY-MM-DD" pattern="[1-2]{1}[0-9]{3}-[0-9]{2}-[0-9]{2}" min="1990-01-01" max="2999-12-31" required readonly>
        </div>
      </div>

      

      <div class="row">
        <div class="col-md-12">
          <label for="inputSpecialNote">Special Note</label>
          <textarea class="form-control" id="inputSpecialNote" type="text" name="specialNote" value="<%= specialNote %>" readonly></textarea>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <label for="selectCarrier">Carrier</label>
          <select class="form-control" name="carrier" id="select">
            <option value="">Select Carrier</option>
            <% carriers.forEach(function(carrier) { %>
              <% if (selectedCarrier === carrier.carrierName) { %>
                <option value="<%= carrier.carrierName %>" selected><%= carrier.carrierName %></option>
              <% } else { %>
                <option value="<%= carrier.carrierName %>"><%= carrier.carrierName %></option>
              <% } %>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label for="inputFreight">Freight ($/Truck)</label>
          <input class="form-control" id="inputFreight" type="text" name="freight" value="<%= freight %>" pattern="[0-9]{0,9}.[0-9]{0,2}" title="Please enter up to 2 decimal places: $123 or $123.45" required>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <button onclick="return confirm('Are you sure you want to submit for carrier and freight?')" class="btn btn-lg btn-primary btn-block" type="submit" name="button" value="submit">Submit</button>
        </div>
      </div>

      

    </form>

  </div>

  <%- include("partials/footer"); -%>
  <%- include("partials/scripts"); -%>
  <script src="/javascript/populate_dynamic_options_for_ship_from.js"></script>
  <script src="/javascript/populate_dynamic_options_for_ship_to.js"></script>

</body>

</html>



