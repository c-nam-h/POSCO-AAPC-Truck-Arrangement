<%- include("partials/header"); %>
<%- include("partials/navbar"); %>

<body>
    <div class="container">
        <% if (err) { %>
            <div class="alert alert-warning alert-dismissible" role="alert">
              <button class="close" data-dismiss="alert" aria-label="Close" type="button"><span aria-hidden="true">&times;</span></button>
              <strong>Warning!</strong> <%= err %>
            </div>
        <% } %>
        <% if (message) { %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button class="close" data-dismiss="alert" aria-label="Close" type="button"><span aria-hidden="true">&times;</span></button>
              <strong>Success!</strong> <%= message %>
            </div>
        <% } %>
    
    
    <form class="form-group form-signin" action="/change-password" method="post">
        <div class="text-center">
          <h3 class="title">CHANGE PASSWORD</h3>
        </div>

        <hr>
    
        <div class="form-group">
          <label for="inputCurrentPassword">Current Password</label>
          <input type="password" id="inputCurrentPassword" class="form-control" name="currentPassword" required>

          <label for="inputNewPassword">New Password (5 or more characters)</label>
          <input type="password" id="inputNewPassword" class="form-control" name="newPassword" pattern=".{5,}" title="Five or more characters" required>

          <label for="inputConfirmPassword">Confirm Password</label>
          <input type="password" id="inputConfirmPassword" class="form-control" name="confirmPassword" pattern=".{5,}" title="Five or more characters" required>
        </div>
    
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="changePasswordButton">Change Password</button>
        </div>
      </form>
    </div>
</body>

<%- include("partials/scripts"); %>
<%- include("partials/footer"); %>